<%= content_for :title do %>
  Sign up
<% end %>

<div class="flex flex-col justify-center items-center space-y-4">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col justify-content align-items space-y-1" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :nickname, class: "dark:text-white" %>
    <%= f.text_field :nickname, class: "dark:text-white dark:bg-slate-900" %>

    <%= f.label :email, class: "dark:text-white" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "dark:text-white dark:bg-slate-900" %>

    <%= f.label :password, class: "dark:text-white" %>
    <% if @minimum_password_length %>
      <em class="dark:text-white dark:bg-slate-900">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "dark:text-white dark:bg-slate-900" %>

    <%= f.label :password_confirmation, class: "dark:text-white" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "dark:text-white dark:bg-slate-900" %>

    <%= f.submit "Sign up", class: "text-white bg-sky-500 hover:bg-sky-800 rounded-lg border border-sky-500 px-6 py-3" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>