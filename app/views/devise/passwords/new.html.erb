<%= content_for :title do %>
  Forgot your password?
<% end %>

<div class="flex flex-col justify-center items-center space-y-4">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {
    class: "flex flex-col justify-content align-items space-y-1",
    method: :post
  }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :email, class: "dark:text-white" %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "dark:text-white dark:bg-slate-900" %>

    <%= f.submit "Send me reset password instructions", class: "text-white bg-sky-500 hover:bg-sky-800 rounded-lg border border-sky-500 px-6 py-3" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>