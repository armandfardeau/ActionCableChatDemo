<%= content_for :title do %>
  Log in
<% end %>

<div class="flex flex-col justify-center items-center space-y-4">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col justify-content align-items space-y-1" }) do |f| %>
    <%= f.label :email, class: "dark:text-white" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "dark:text-white dark:bg-slate-900" %>

    <%= f.label :password, class: "dark:text-white" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "dark:text-white dark:bg-slate-900" %>

    <% if devise_mapping.rememberable? %>
      <div class="flex flex-row items-center justify:center">
        <%= f.check_box :remember_me, class: "dark:text-white dark:bg-slate-900" %>
        <%= f.label :remember_me, class: "p-2 dark:text-white" %>
      </div>
    <% end %>

    <%= f.submit "Log in", class: "text-white bg-sky-500 hover:bg-sky-800 rounded-lg border border-sky-500 px-6 py-3" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>